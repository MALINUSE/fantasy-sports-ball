<!DOCTYPE html>
<html>
  <head>
    <title>Fantasy Sports Ball</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p> <%= link_to "Players", players_path %> | <%= link_to "Teams", teams_path %> |
        <% if session[:user_id] %>
          Currently Logged In: <%= User.find(session[:user_id]).username %> | <%= link_to "Logout", logout_path %>
        <% else %>
          <%= link_to "Login", login_path %> | <%= link_to "Sign Up", new_user_path %>
        <% end %>   </p>
    <%= yield %>
  </body>
</html>
